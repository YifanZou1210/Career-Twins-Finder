# 创建 .gitignore 文件
cat > .gitignore << 'EOF'
# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
env/
venv/
.venv/
*.egg-info/
dist/
build/

# Data files (too large for GitHub)
data/linkedin-job-postings/
*.csv
processed_data/*.pkl

# IDE
.vscode/
.idea/
*.swp
*.swo
.DS_Store

# Streamlit
.streamlit/secrets.toml

# Jupyter
*.ipynb_checkpoints
.ipynb_checkpoints/

# Environment variables
.env

# Logs
*.log
EOF